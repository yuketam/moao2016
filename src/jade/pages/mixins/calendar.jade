mixin calendar_week(item, status)
  tr.calendar-content__row
    - for (var i = 0; i < item.length; i++) {
      td.calendar-content__cell
        if status[i]
          span.calendar-content__date.open #{item[i]}
          span.calendar-content__flag 開館日
        else
          span.calendar-content__date #{item[i]}
    - }

mixin calendar(type)
  article.calendar
    a(href='info.html')
      div.calendar-head.align-center
        p.calendar-head__text 会期
        p.calendar-head__subtext （6週・14日間）
        img.calendar-head__textimg(src='img/sectiontext_schedule.png')

    div.calendar-calhead.row.align-center
      div.column.five
      p.calendar-calhead__text.column.two
        span.calendar-calhead__text-t 2016年
        img(src='img/calendar_year_head.png')
      div.column.five
    div.calendar-content-wrapper.row.align-center
      div.column.one.calendar-left-margin
      div.calendar-content.column.four
        if type === 'index'
          img.calendar-content__img(src='img/calendar_aug.png')
        else
          img.calendar-content__img(src='img/calendar_info_aug.png')
        div.calendar-content__table
          p.row.align-center
            p.calendar-content__head.column.whole 8月
          p.row.align-center
            table.column.whole
              tbody
                +calendar_week(['日','月','火','水','木','金','土'], [0,0,0,0,0,0,0])
                +calendar_week(['',1,2,3,4,5,6], [0,0,0,0,0,0,0])
                +calendar_week([7,8,9,10,11,12,13], [0,0,0,0,0,0,0])
                +calendar_week([14,15,16,17,18,19,20], [0,0,0,0,0,0,1])
                +calendar_week([21,22,23,24,25,26,27], [1,0,0,0,0,0,1])
                +calendar_week([28,29,30,31,'','',''], [1,0,0,0,0,0,0])
      div.column.two.calendar-center-margin
      div.calendar-content.column.four
        if type === 'index'
          img.calendar-content__img(src='img/calendar_sep.png')
        else
          img.calendar-content__img(src='img/calendar_info_sep.png')
        div.calendar-content__table
          p.row.align-center
            p.calendar-content__head.column.whole 9月
          p.row.align-center
            table.column.whole
              tbody
                +calendar_week(['日','月','火','水','木','金','土'], [0,0,0,0,0,0,0])
                +calendar_week(['','','','',1,2,3], [0,0,0,0,0,0,1])
                +calendar_week([4,5,6,7,8,9,10], [1,0,0,0,0,0,1])
                +calendar_week([11,12,13,14,15,16,17], [1,0,0,0,0,0,1])
                +calendar_week([18,19,20,21,22,23,24], [1,1,0,0,1,0,1])
                +calendar_week([25,26,27,28,29,30,''], [1,0,0,0,0,0,0])
      div.column.one

    div.calendar-legend.row.align-right
      p.column.eleven 
        span.calendar-legend__circlemark ●
        | 印は開館日です。
      div.column.one

    div.calendar-foot.align-center
      div.row
        div.column.whole
          p.calendar-foot__head 開館時間
          p.calendar-foot__content 12:00〜20:00
